<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tblNumpad"
    android:layout_width="match_parent"
   	android:layout_height="wrap_content">
    
    <TableRow>

            <Button
                android:id="@+id/btnNumpad1"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="20sp"
                android:background="#EEE" />

            <Button
                android:id="@+id/btnNumpad2"
                android:text="2"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1" 
                android:textSize="20sp"
                android:background="#EEE" />
            
            <Button
                android:id="@+id/btnNumpad3"
                android:text="3"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1" 
                android:textSize="20sp"
                android:background="#EEE" />
            
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnNumpad4"
                android:text="4"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1" 
                android:textSize="20sp"
                android:background="#EEE"/>
            
            <Button
                android:id="@+id/btnNumpad5"
                android:text="5"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="#EEE" />
            
            <Button
                android:id="@+id/btnNumpad6"
                android:text="6"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1" 
                android:textSize="20sp"
                android:background="#EEE" />
            
        </TableRow>
       <TableRow>
            <Button
                android:id="@+id/btnNumpad7"
                android:text="7"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1" 
                android:textSize="20sp"
                android:background="#EEE" />
            
            <Button
                android:id="@+id/btnNumpad8"
                android:text="8"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="#EEE" />
            
            <Button
                android:id="@+id/btnNumpad9"
                android:text="9"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="#EEE" />

        </TableRow>
       	<TableRow>
       	    <Button
                android:id="@+id/btnNumpadLeft"
                android:text="Clear"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="#E3E3E3" />
            <Button
                android:id="@+id/btnNumpad0"
                android:text="0"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="#EEE" />
            <Button
                android:id="@+id/btnNumpadRight"
                android:text="OK"
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="#E3E3E3" />
        </TableRow>

</TableLayout>